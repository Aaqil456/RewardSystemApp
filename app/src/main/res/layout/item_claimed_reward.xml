<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_margin="5dp"
    android:background="@drawable/reward_claimed_card_view_background"
    android:gravity="center">

    <TextView
        android:id="@+id/claimed_reward_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Claimed Reward"
        android:textColor="#000000"
        android:textSize="16sp" />

    <!-- "Show QR" Button -->
    <Button
        android:id="@+id/claimed_reward_show_qr_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Show QR"
        android:background="@drawable/button_bg"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/claimed_reward_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Claimed on: Date"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

</LinearLayout>
